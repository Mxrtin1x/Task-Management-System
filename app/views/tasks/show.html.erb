<h1>Task Details</h1>

<p>
  <strong>Title:</strong>
  <%= @task.title %> <!-- Always required, so no fallback needed -->
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description.presence || "Not set" %>
</p>

<p>
  <strong>Due Date:</strong>
  <%= @task.due_date.presence || "Not set" %>
</p>

<p>
  <strong>Priority:</strong>
  <%= @task.priority.presence || "Not set" %>
</p>

<p>
  <strong>Status:</strong>
  <%= @task.status.presence || "Not set" %>
</p>

<%= link_to 'Edit Task', edit_task_path(@task), class: 'btn btn-primary' %>
<%= link_to 'Back to List', tasks_path, class: 'btn btn-secondary' %>
