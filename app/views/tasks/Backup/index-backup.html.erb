<h1>Your Tasks</h1>

<%= link_to 'New Task', new_task_path, class: 'btn btn-primary' %>


<style>
  /* Customize table row colors */
  .table tr:nth-of-type(odd) {
    background-color: #ffffff; /* Light gray for odd rows */
  }
  .table tr:nth-of-type(even) {
    background-color: #f9f9f9; /* White for even rows */
  }

</style>


<table class="table">
  <thead>
    <tr style="background-color: #f9f9f9;"> <!-- Light gray background -->
      <th>Title</th>
      <th>Description</th>  <!-- Added this column for description -->
      <th>Due Date</th>
      <th>Priority</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>  <!-- Display the description here -->
        <td><%= task.due_date %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td>
          <%= link_to 'Show', task_path(task) %> |
          <%= link_to 'Edit', edit_task_path(task) %> |
          <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
