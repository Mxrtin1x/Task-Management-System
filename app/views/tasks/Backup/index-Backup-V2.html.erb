<h1>Your Tasks</h1>

<%= link_to 'New Task', new_task_path, class: 'btn btn-primary mb-3' %>

<style>
  .card {
    border: 1px solid #ddd; /* Clean outer border for the card */
    border-radius: 12px; /* Rounded corners for the card */
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Subtle shadow */
  }

  .table {
    margin-bottom: 0; /* Remove extra margin below the table */
    border-collapse: separate;
  }

  .table thead th {
    background-color: #fff; /* Light background for header */
    font-weight: bold;
    border-top: none; /* Remove the top border */
    border-bottom: 2px solid #ddd; /* Clean bottom border */
  }

  .table-striped tbody tr:nth-of-type(odd) {
    background-color: #f9f9f9; /* Alternate row colors */
  }

  .table-bordered {
    border: none; /* Remove the default border from the table */
  }
</style>

<div class="container mt-4">
  <div class="col-md-12 col-12 col-sm-12">
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Due Date</th>
                <th>Priority</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @tasks.each do |task| %>
                <tr>
                  <td><%= task.title %></td>
                  <td><%= task.description %></td>
                  <td><%= task.due_date %></td>
                  <td><%= task.priority %></td>
                  <td><%= task.status %></td>
                  <td>
                    <%= link_to task_path(task), class: 'btn btn-info btn-action mr-1', title: 'Show' do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to edit_task_path(task), class: 'btn btn-primary btn-action mr-1', title: 'Edit' do %>
                      <i class="fas fa-pencil-alt"></i>
                    <% end %>
                    <%= link_to task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-action', title: 'Delete' do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
