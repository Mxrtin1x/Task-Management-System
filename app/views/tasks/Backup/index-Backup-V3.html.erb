<h1>Your Tasks</h1>

<%= link_to 'New Task', new_task_path, class: 'btn btn-primary mb-3' %>

<div class="container mt-4">
  <div class="col-md-12 col-12 col-sm-12">
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Due Date</th>
                <th>Priority</th>
                <th>
                  Status
                  <button id="statusFilter" class="btn btn-link p-0" data-order="default">
                    <i class="fas fa-sort"></i>
                  </button>
                </th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody id="taskTableBody">
              <% @tasks.each do |task| %>
                <tr data-status="<%= task.status %>">
                  <td><%= task.title %></td>
                  <td><%= task.description %></td>
                  <td><%= task.due_date %></td>
                  <td><%= task.priority %></td>
                  <td><%= task.status %></td>
                  <td>
                    <!-- Show Button -->
                    <%= link_to task_path(task), class: 'btn btn-info btn-action mr-1', title: 'Show' do %>
                      <i class="fas fa-eye"></i>
                    <% end %>

                    <!-- Edit Button -->
                    <%= link_to edit_task_path(task), class: 'btn btn-primary btn-action mr-1', title: 'Edit' do %>
                      <i class="fas fa-pencil-alt"></i>
                    <% end %>

                    <!-- Delete Button -->
                    <button
                      type="button"
                      class="btn btn-danger btn-action"
                      data-bs-toggle="modal"
                      data-bs-target="#deleteModal<%= task.id %>"
                      title="Delete"
                    >
                      <i class="fas fa-trash"></i>
                    </button>
                  </td>
                </tr>

                <!-- Delete Confirmation Modal -->
                <div class="modal fade" id="deleteModal<%= task.id %>" tabindex="-1" aria-labelledby="deleteModalLabel<%= task.id %>" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                      <div class="modal-header border-0"> <!-- Removed the border -->
                        <h5 class="modal-title" id="deleteModalLabel<%= task.id %>">Confirm Deletion</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body"> <!-- Centered text -->
                        Are you sure you want to delete the task "<strong><%= task.title %></strong>"?
                      </div>
                      <div class="modal-footer border-0"> <!-- Removed the border -->
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <%= link_to task_path(task), method: :delete, class: 'btn btn-danger', data: { turbo: false } do %>
                          Yes, Delete
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const statusFilter = document.getElementById("statusFilter");
    const taskTableBody = document.getElementById("taskTableBody");

    statusFilter.addEventListener("click", function () {
      let order = statusFilter.getAttribute("data-order");

      // Get all rows in the table
      const rows = Array.from(taskTableBody.querySelectorAll("tr"));

      // Toggle the sorting order
      if (order === "default" || order === "desc") {
        rows.sort((a, b) => {
          const statusA = a.getAttribute("data-status");
          const statusB = b.getAttribute("data-status");
          return statusA.localeCompare(statusB); // Ascending order (Pending, Completed)
        });
        statusFilter.setAttribute("data-order", "asc");
        statusFilter.innerHTML = `<i class="fas fa-sort-up"></i>`; // Update arrow icon
      } else {
        rows.sort((a, b) => {
          const statusA = a.getAttribute("data-status");
          const statusB = b.getAttribute("data-status");
          return statusB.localeCompare(statusA); // Descending order (Completed, Pending)
        });
        statusFilter.setAttribute("data-order", "desc");
        statusFilter.innerHTML = `<i class="fas fa-sort-down"></i>`; // Update arrow icon
      }

      // Reorder the rows in the table
      rows.forEach(row => taskTableBody.appendChild(row));
    });
  });
</script>
